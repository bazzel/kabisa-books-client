<div
  class="fixed inset-0 flex justify-center items-center"
  {{ did-insert this.registerKeyDown }}
  {{ will-destroy this.unregisterKeyDown }}
  >
  <div
  class="fixed inset-0 bg-gray-500 opacity-75"
  {{ on 'click' this.handleCancelClick }}
  />
  <div class="bg-white container shadow-xl rounded z-10">
    <div class="px-6 py-5 flex justify-between items-start">
      <h2 class="text-2xl font-medium tracking-wide">{{this.args.title}}</h2>
      <button
        type="button"
        class="outline-none text-2xl text-gray-500 hover:text-gray-800 transition duration-200 ease-in-out"
        aria-label="Close"
        {{ on 'click' this.handleCancelClick }}
        >
        <span aria-hidden="false">Ã—</span>
      </button>
    </div>
    <div class="px-6 pb-5">
      {{yield}}
    </div>
  </div>
</div>